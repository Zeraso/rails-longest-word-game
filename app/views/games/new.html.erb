<h1>New game</h1>
<p><% @letters.each do |letter| %>
  <ul>
    <li><%= letter %></li>
  </ul>
  <% end %>
</p>
<h2>What's the longest word you can find?</h2>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="text" name="word" placeholder="Your word">
  <%= hidden_field_tag :letters, @letters %>
  <input type="submit" value="see my score">
</form>
